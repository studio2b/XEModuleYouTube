<?xml version="1.0" encoding="utf-8"?>
<module>
	<grants>
		<grant name="browse" default="guest">
			<title xml:lang="ko">목록</title>
			<title xml:lang="zh-CN">目录</title>
			<title xml:lang="jp">リスト</title>
			<title xml:lang="en">list</title>
			<title xml:lang="vi">Danh sách</title>
			<title xml:lang="es">Lista</title>
			<title xml:lang="zh-TW">列表</title>
			<title xml:lang="tr">Liste</title>
		</grant>
		<grant name="peruse" defualt="guest">
			<title xml:lang="ko">보기</title>
			<title xml:lang="zh-CN">查看</title>
			<title xml:lang="jp">閲覧</title>
			<title xml:lang="en">view</title>
			<title xml:lang="vi">Xem</title>
			<title xml:lang="es">Opinión</title>
			<title xml:lang="zh-TW">檢視</title>
			<title xml:lang="tr">görüş</title>
		</grant>
	</grants>
	<permissions>
		<permission action="getYoutubeAdminSimpleSetup" target="manager" />
		<permission action="dispYoutubeAdminBrowse" target="manager" />
		<permission action="dispYoutubeAdminUpdate" target="manager" />
		<permission action="dispYoutubeAdminUpdateAuthority" target="manager" />
		<permission action="dispYoutubeAdminDelete" target="manager" />
		<permission action="procYoutubeAdminUpdateSimpleSetup" target="manager" />
	</permissions>
	<actions>
		<!--AdminModel-->
		<action name="getYoutubeAdminSimpleSetup" type="model" simple_setup_index="true" />
		<!--AdminView-->
		<action name="dispYoutubeAdminBrowse" type="view" admin_index="true" />
		<action name="dispYoutubeAdminUpdate" type="view" />
		<action name="dispYoutubeAdminUpdateAuthority" type="view" />
		<action name="dispYoutubeAdminDelete" type="view" />
		<!--AdminController-->
		<action name="procYoutubeAdminUpdate" type="controller" />
		<action name="procYoutubeAdminDelete" type="controller" />
		<action name="procYoutubeAdminUpdateSimpleSetup" type="controller" />
		
		<!--View-->
		<action name="dispYoutubeBrowse" type="view" standalone="true" index="true" />
		<!--Controller-->
		<action name="procYoutubeUpdateCache" type="controller" standalone="true" />
		
	</actions>
	<menus>
		<menu name="youtube" type="all">
			<title xml:lang="en">YouTube</title>
			<title xml:lang="ko">유튜브</title>
		</menu>
	</menus>
</module>